{
  "name": "@strt/www",
  "description": "Strateg's website",
  "private": true,
  "version": "1.0.0",
  "author": "Alexander Nanberg <alexander.nanberg@strateg.se>",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "now-build": "next build",
    "start": "next start",
    "lint": "npm-run-all --continue-on-error --parallel lint:*",
    "lint:scripts": "eslint \"src/**/*.js\"",
    "lint:styles": "stylelint \"src/**/*.js\"",
    "format": "npm-run-all --continue-on-error --parallel format:*",
    "format:code": "prettier-eslint --write \"src/**/*.js\"",
    "format:other": "prettier --write \"**/*.{md,html,yaml,yml}\"",
    "env": "export $(cat .env | xargs)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "stylelint",
      "prettier-eslint --write",
      "git add"
    ],
    "*.{md,html,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.6",
    "@fortawesome/free-brands-svg-icons": "^5.4.1",
    "@fortawesome/pro-light-svg-icons": "^5.4.1",
    "@fortawesome/pro-regular-svg-icons": "^5.4.1",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.18.0",
    "dayjs": "^1.7.7",
    "focus-trap": "^4.0.2",
    "js-cookie": "^2.2.0",
    "matter-js": "^0.14.2",
    "next": "^8.0.0",
    "next-fonts": "^0.17.0",
    "next-images": "^1.0.4",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-helmet": "^5.2.0",
    "react-spring": "^8.0.0",
    "rehype-react": "^3.0.3",
    "styled-components": "^4.0.0",
    "styled-reset": "^1.5.1"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.8.0",
    "eslint": "^5.6.1",
    "eslint-config-strateg": "^1.0.1",
    "husky": "^1.1.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.6.0",
    "stylelint-config-strateg": "^1.8.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0"
  }
}
